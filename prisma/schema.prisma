generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DateRange {
  ONE_DAY
  ONE_WEEK
  ONE_MONTH
  SIX_MONTHS
  ONE_YEAR
}

enum Status {
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
  PENDING
  ACCEPTED
}

model Application {
  id           String     @id @default(uuid())
  url          String
  company      String
  position     String
  status       Status
  details      String? // Nullable field
  dateApplied  DateTime
  trackedRange DateRange?
  userId       String
  user         User       @relation("ApplicationToUser", fields: [userId], references: [id]) // Explicitly named relation
  createdAt    DateTime   @default(now()) // Automatically set when creating a record
  updatedAt    DateTime   @updatedAt // Automatically updated when updating a record

  @@map("application") // Note the lowercase "application"
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  selectedRange DateRange?
  applications  Application[] @relation("ApplicationToUser") // Matches the relation name in Application
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}
